{% schema %}
  {
    "name": "Susparsa footer",
    "settings": [],
	"max_blocks": 4,
    "blocks": [
      {
        "name": "About",
        "type": "footer_about",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "text",
            "id": "link_fb",
            "label": "Facebook link"
          },
          {
            "type": "text",
            "id": "link_ig",
            "label": "Instagram link"
          }
        ]
      },
      {
        "name": "Menu",
        "type": "footer_menu",
		"settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "link_list",
            "id": "menu",
            "label": "Menu"
          }
		]
      }
	]
  }
{% endschema %}

<footer class="footer">
  <div class="container footer__container">
    <div class="footer__columns">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'footer_about' %}
            <div class="footer__col">

              {% if block.settings.title != '' %}
              <h2 class="footer__heading">{{ block.settings.title }}</h2>
              {% endif %}

              <address class="footer__address">

                {{ block.settings.text }}

                {% if block.settings.link_fb != '' or block.settings.link_ig != '' %}
                <ul class="social" aria-label="Our social accounts">

                  {% if block.settings.link_fb != '' %}
                  <li class="social__item">
                    <a class="social__link" href="{{ block.settings.link_fb }}" target="_blank" aria-label="Facebook">
                      <svg aria-hidden="true" class="social__logo" width="10" height="20" viewBox="0 0 10 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M9.02694 9.9817H6.42882V19.5H2.49245V9.9817H0.6203V6.63659H2.49245V4.47193C2.49245 2.92396 3.22776 0.5 6.46386 0.5L9.37967 0.512199V3.7592H7.26406C6.91704 3.7592 6.42908 3.93258 6.42908 4.671V6.63971H9.37084L9.02694 9.9817Z" fill="#5E626B"/>
                      </svg>
                    </a>
                  </li>
                  {% endif %}

                  {% if block.settings.link_ig != '' %}
                  <li class="social__item">
                    <a class="social__link" href="{{ block.settings.link_ig }}" target="_blank" aria-label="Instagram">
                      <svg aria-hidden="true" class="social__logo" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M14.7071 0.5C17.3502 0.5 19.5 2.65013 19.5 5.29293V14.7071C19.5 17.3502 17.3502 19.5 14.7071 19.5H5.29293C2.65013 19.5 0.5 17.3502 0.5 14.7071V5.29293C0.5 2.65013 2.65013 0.5 5.29293 0.5H14.7071ZM14.7071 2.56779H5.29293C3.7903 2.56779 2.56779 3.7903 2.56779 5.29293V14.7071C2.56779 16.2097 3.7903 17.4326 5.29293 17.4326H14.7071C16.2097 17.4326 17.4326 16.21 17.4326 14.7071V5.29293C17.4326 3.7903 16.21 2.56779 14.7071 2.56779ZM10 5.10678C12.6984 5.10678 14.8936 7.30195 14.8936 10C14.8936 12.698 12.698 14.8936 10 14.8936C7.30195 14.8936 5.10678 12.6984 5.10678 10C5.10678 7.30195 7.30195 5.10678 10 5.10678ZM10 7.17456C8.44247 7.17456 7.17421 8.44212 7.17421 9.99965C7.17421 11.5579 8.44247 12.8258 10 12.8258C11.5582 12.8258 12.8254 11.5579 12.8254 9.99965C12.8254 8.44247 11.5579 7.17456 10 7.17456ZM15.0509 3.80297C15.6892 3.80297 16.2086 4.32238 16.2086 4.96073C16.2086 5.59909 15.6892 6.1185 15.0509 6.1185C14.4122 6.1185 13.8928 5.59909 13.8928 4.96073C13.8928 4.32238 14.4122 3.80297 15.0509 3.80297Z" fill="#5E626B"/>
                      </svg>
                    </a>
                  </li>
                  {% endif %}

                </ul>
                {% endif %}
              </address>
            </div>
      
      		{% when 'footer_menu' %}
      		<div class="footer__col">
              {% if block.settings.title != '' %}
              <h2 class="footer__heading">{{ block.settings.title }}</h2>
              {% endif %}
              <nav aria-label="Footer primary">
              	<ul class="footer__list">
                {% for link in block.settings.menu.links %}
                  <li class="footer__list-item">
                    <a class="footer__list-link" href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                {% endfor %}                  
                </ul>
              </nav>
      		</div>
        {% endcase %}
      {% endfor %}							
    </div>
    <small class="footer__copyright">Â© Susparsa {{ "now" | date: "%Y" }}</small>
  </div>
</footer>